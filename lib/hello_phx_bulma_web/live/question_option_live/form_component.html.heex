<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="question_option-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :content %>
    <%= textarea f, :content %>
    <%= error_tag f, :content %>
  
    <%= label f, :correct %>
    <%= checkbox f, :correct %>
    <%= error_tag f, :correct %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
